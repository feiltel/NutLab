<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/item_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是文章的标题"
        android:textColor="#333333"
        android:textSize="16sp"
        android:singleLine="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_article_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="置顶"
            android:textSize="12sp"
            android:background="@drawable/article_textview_bg"
            android:textColor="#d10773"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者："
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/item_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈浩"
            android:textColor="#333333"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类："
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/item_article_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android控件"
            android:textColor="#333333"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:textColor="#999999"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/item_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-04"
            android:textColor="#333333"
            android:textSize="12sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="10dp"/>
</LinearLayout>